.future-plans
	display block

	padding-top 34px

	&__text
		margin-top -5px

	&__input
		display none

		&:checked + .future-plans__label::after
			position absolute
			top 4px
			left 2px

			display block

			sprite ($radio_dot)

			content ''

	&__list
		display flex
		align-content flex-start
		flex-wrap wrap

		padding-top 17px

	&__item
		position relative

		min-width 130px

		padding-right 20px
		padding-left 30px

		&:nth-child(2)
			padding-right 27px

		&:nth-child(3)
			padding-right 24px

	&__label
		font-size 20px
		font-weight bold
		line-height 25px

		&::before
			position absolute
			top -4px
			left -5px

			display block

			sprite ($radio_border)

			content ''
